{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Life Expectancy In Relation To A Country's Economical State",
    "width": 325,
    "height": 550,
    "data": {
      "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/Life_Expectancy_Data.csv"
    },
    "params": [
      {
        "name": "year_select",
        "value": 2000,
        "bind": {
          "input": "select",
          "options": ["2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015"],
          "labels": [
            "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015"
          ],
          "name": "Year:"
        }
      }
    ],
    "transform": [
      {"filter": "datum.GDP > 0"},
      {"filter": "datum.Year == year_select"}
    ],
    "encoding": {
      "x": {
        "field": "Income composition of resources",
        "type": "quantitative",
        "scale": {"domain": [0, 1]},
        "title": "Income composition of resources (human development index from 0-1)"
      },
      "y": {
        "field": "GDP",
        "type": "quantitative",
        "scale": {"type": "log"},
        "title": "GDP (in USD)"
      }
    },
    "layer": [
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Mexico' || datum['Country'] == 'Luxembourg' || datum['Country'] == 'Malaysia' ||  datum['Country'] == 'Thailand' || datum['Country'] == 'United Arab Emirates' ||datum['Country'] == 'France' || datum['Country'] == 'Croatia' || datum['Country'] == 'Japan'"
            },
            "value": 0
          }
        }
      },
      {
        "params": [
          {"name": "hover", "select": {"type": "point", "on": "mouseover"}}
        ],
        "mark": "point",
        "encoding": {
          "size": {
            "field": "Life expectancy",
            "type": "quantitative",
            "title": "Life expectancy (years)"
          },
          "color": {"value": "green"},
          "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.1},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {
              "field": "Life expectancy",
              "type": "quantitative",
              "title": "Life expectancy (years)"
            },
            {
              "field": "GDP",
              "type": "quantitative",
              "title": "GDP"
            },
            {
              "field": "Status",
              "type": "nominal",
              "title": "Country development status"
            }
          ]
        }
      }
    ]
  }