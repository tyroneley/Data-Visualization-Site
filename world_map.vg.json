{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Life Expetancy Of Countries Around The World (WHO)",
    "width": 500,
    "height": 300,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/ne_110m_ocean.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "skyblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/Life_Expectancy_Data.csv",
                            "format": {"type": "csv"}
                        },
                        "key": "Country"
                    }
                }
            ],
            "encoding": {
                "color": {
                    "field": "Life expectancy",
                    "type": "quantitative",
                    "title": "Life expectancy in years",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1, 100
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Life expectancy",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/Life_Expectancy_Data.csv",
                "format": {
                  "type": "csv"
                  }
              },
              "params": [
                {"name": "hover", "select": {"type": "point", "on": "mouseover"}}
              ],
              "mark": {
                "type": "circle"
            }
        }
      ]
  }
  