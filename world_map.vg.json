{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Life Expectancy Of Countries Around The World (WHO, 2015)",
    "width": 500,
    "height": 300,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/tyroneley/Vegalite-Site/main/Life_Expectancy_Data.csv",
                "format": {"type": "csv"}
              },
              "key": "Country",
              "fields": ["Life expectancy"]
            }
          }
        ],
        "encoding": {
          "color": {
            "field": "Life expectancy",
            "type": "quantitative",
            "title": "Life expectancy in years",
            "scale": {"type": "log"}
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Life expectancy", "type": "quantitative", "title": "Life expectancy (years)"}
          ]
        }
      }
    ]
}