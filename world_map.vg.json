{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Average Life Expetancy Of Countries Around The World (WHO)",
    "width": 500,
    "height": 300,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
      "url": "/Life_Expectancy_Data.cv",
      "format": {
        "type": "csv"
        }
    },
    "layer": [
        {
            "data": {
                "url": "/ne_10m_ocean.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "skyblue"
            }
        },
        {
            "data": {
                "url": "/ne_10m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "Life expectancy in age",
                    "type": "quantitative",
                    "title": "Life expectancy in age",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000,
                            2000,
                            3000,
                            4000
                        ]
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    }
                ]
            }
        }
      ]
  }
  